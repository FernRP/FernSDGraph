.ControlsContainer {
    border-top-width: 1px;
    border-color: rgb(24, 24, 24);
    padding-top: 4px;
}

.PropertyContainer {
    padding: 6px;
}

.PreviewToggleButton {
    font-size: 12px;
    height: 16px;
    background-image: resource('Collapse-Up');
    -unity-background-scale-mode: scale-to-fit;
}

.Collapsed {
    background-image: resource('Collapse-Down');
}

.PreviewToggleButton:hover {
    background-color: rgb(68, 68, 68);
}

.PreviewToggleButton:active {
    background-color: rgb(85, 85, 85);
}

.RTSettingsView {
    border-top-width: 1px;
    border-color: rgb(24, 24, 24);
    background-color: rgb(34, 34, 34);
    padding: 6px;
    padding-left: 10px;
}

.PropertyEditorTitle {
    -unity-font-style: bold;
    font-size: 16px;
}

.PropertyEditorHeader {
    -unity-font-style: bold;
    font-size: 12px;
    margin-top: 10px;
    margin-bottom: 4px;
}

.MaterialInspector {
    margin-left: 10px;
}

.Hidden {
    display: none;
}

.Visible {
    display: flex;
}

.ControlsContainer > PropertyField > * > Label,
.ControlsContainer > * > Label
{
    min-width: 80px;
}

.Preview {
    background-color: rgba(63, 63, 63, 0.8);
}

.PinButton {
    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
    width: 28px;
    height: 28px;
    border-radius: 0;
    margin-right: 0;
    margin-left: 0;
}

.PinButton:hover {
    background-color: rgba(127, 127, 127, 0.2);
}

.PinButton_Hover:hover {
    background-color: rgb(64, 64, 64);
}

#settings-button {
    margin-left: 0;
}

.highlight
{
    border-color: #fdd835;
    border-width: 2px;
    padding: -2px;
    border-radius: 10px;
}

.Indent
{
    margin-left: 10px;
}